<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Ruta del log -->
    <springProperty name="LOG_PATH" source="app.config.log-path"/>
    <property name="LOG_FILE" value="${LOG_PATH}/deinsoft-facturador.log" />

    <!-- Patrón de formato -->
    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n" />

    <!-- Consola opcional (puedes eliminar esto si solo quieres archivo) -->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Archivo rotativo -->
    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- patrón de archivo diario -->
            <fileNamePattern>${LOG_PATH}/backup.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory> <!-- conservar 30 días -->
        </rollingPolicy>

        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Nivel por defecto -->
    <root level="INFO">
        <appender-ref ref="RollingFile" />
        <appender-ref ref="Console" />
    </root>

</configuration>